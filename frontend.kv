<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (1920, 1080)
            play: False
            size_hint_y: 0.75
            opacity: 0
        Button:
            id: camera_button
            text: "Start Camera"
            size_hint_y: 0.15
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_color: 0.2, 0.5, 0.6, 1
            opacity: 1 if self.state == 'normal' else 0.5
        Button:
            text: "Capture"
            size_hint_y: 0.15
            on_press: root.capture()
            background_color: 0.2, 0.5, 0.6, 1
            opacity: 1 if self.state == 'normal' else 0.5


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: img
            size_hint_y: 0.70
        Button:
            text: "Create Shareable Link"
            size_hint_y: 0.10
            background_color: 0.2, 0.5, 0.6, 1
            opacity: 1 if self.state == 'normal' else 0.5
            on_press: root.create_link()
        Label:
            id: link
            text: ""
            size_hint_y: 0.05
            color: 0.3, 0.4, 0.4
        GridLayout:
            cols: 2
            size_hint_y: 0.15
            Button:
                text: "Copy Link"
                background_color: 0.2, 0.5, 0.6, 1
                opacity: 1 if self.state == 'normal' else 0.5
                on_press: root.copy_link()
            Button:
                text: "Open Link"
                background_color: 0.2, 0.5, 0.6, 1
                opacity: 1 if self.state == 'normal' else 0.5
                on_press: root.open_link()



<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.0, 0.0, 0.0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"